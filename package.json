{
  "name": "search-resolver",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "lint": "cd ./node && yarn lint",
    "format": "prettier --write \"**/*.{ts,js,json}\"",
    "test": "cd ./node && yarn test",
    "verify": "yarn lint && yarn test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn verify"
    }
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,graphql,gql}": [
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vtex/danger": "^0.2.9",
    "@vtex/prettier-config": "^1.0.0",
    "eslint": "^7.16.0",
    "eslint-config-vtex": "^15.1.0",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "typescript": "5.1.6"
  }
}
